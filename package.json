{
  "name": "conways-game-of-life",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "nodemon server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "stop:client": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "stop:server": "lsof -ti:3001 | xargs kill -9 2>/dev/null || true",
    "cleanup": "npm run stop:client && npm run stop:server",
    "restart": "npm run cleanup && npm run dev"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "vite": "^5.0.0"
  }
}
